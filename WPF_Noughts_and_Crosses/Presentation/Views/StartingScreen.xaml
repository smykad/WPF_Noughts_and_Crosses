<Window x:Class="WPF_Noughts_and_Crosses.Presentation.Views.StartingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Noughts_and_Crosses.Presentation.Views"
        mc:Ignorable="d"
        Title="Noughts and Crosses" Height="560" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WPF_Noughts_and_Crosses;component/Presentation/Styles/AppStyles.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image Source="../Images/startpage.jpg" Stretch="Fill"/>
        <Canvas>
            <Button Canvas.Top="400" Canvas.Left="200" Width="150" Height="50" Content="Play Game" FontSize="30" Click="Button_Click" Style="{DynamicResource WindowButtonStyle}"/>
            <Button Canvas.Top="400" Canvas.Left="400" Width="150" Height="50" Content="Quit Game" FontSize="30" Click="ButtonQuit_Click" Style="{DynamicResource WindowButtonStyle}"/>
        </Canvas>
    </Grid>
</Window>
